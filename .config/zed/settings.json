// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "background-opacity": 0.9,
  "unfocused-split-opacity": 0.5,
  "background-blur": true,
  "ui_font_size": 16,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Dark",
    "dark": "One Dark"
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#3b414edd",
    "title_bar.background": "#3b414ddd",
    "toolbar.background": "#282c33dd",
    "tab_bar.background": "#2f343edd",
    "tab.inactive_background": "#2f343e00",
    "tab.active_background": "#282c33ee",
    "panel.background": "#2f343e00",
    "editor.background": "#282c3355",
    "status_bar.background": "#3b414ddd"
  }
}

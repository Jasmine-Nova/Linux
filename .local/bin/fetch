#!/bin/sh

# Terminal Font detection (only for Ghostty, as a simple example)
term_font="Unknown"
[ "$TERM" = "xterm-ghostty" ] && [ -f "$HOME/.config/ghostty/config" ] && \
    term_font=$(grep "^font-family" "$HOME/.config/ghostty/config" | sed 's/.*= "\?\([^"]*\)"\?$/\1/') && \
    font_size=$(grep "^font-size" "$HOME/.config/ghostty/config" | sed 's/.*= \([0-9]*\)/\1/') && \
    [ -n "$font_size" ] && term_font="$term_font ($font_size pt)"

echo -e "\
\e[35mOS:            \e[0m $(grep '^PRETTY_NAME=' /etc/os-release 2>/dev/null | cut -d= -f2- | tr -d '"' || echo "Unknown")
\e[35mKernel:        \e[0m $(uname -r 2>/dev/null || echo "Unknown")
\e[35mUptime:        \e[0m $(uptime -p 2>/dev/null | sed 's/up //' || echo "Unknown")
\e[35mPackages:      \e[0m $(pacman -Qq 2>/dev/null | wc -l || echo "Unknown")
\e[35mShell:         \e[0m ${SHELL:-Unknown}
\e[35mDisplay:       \e[0m ${DISPLAY:-None}$([ -n "$WAYLAND_DISPLAY" ] && printf ' (Wayland: %s)' "$WAYLAND_DISPLAY")
\e[35mWM:            \e[0m $(ps -e | grep -E -m 1 "(river|sway|i3|dwm|bspwm|openbox|gnome|kde)" | awk '{print $4}' 2>/dev/null || echo ${XDG_SESSION_DESKTOP:-Unknown})
\e[35mCursor:        \e[0m ${XCURSOR_THEME:-Default}${XCURSOR_SIZE:+ ($XCURSOR_SIZE px)}
\e[35mTerminal:      \e[0m ${TERM:-Unknown}
\e[35mGhostty Font:  \e[0m ${term_font:-Unknown}
\e[35mCPU:           \e[0m $(awk -F: '/model name/ {print $2; exit}' /proc/cpuinfo 2>/dev/null | sed 's/^ *//' || echo "Unknown")
\e[35mGPU:           \e[0m $(lspci | grep -E 'VGA|3D' 2>/dev/null | sed 's/^[0-9a-f:.]* //; s/VGA compatible controller: //; s/ (rev [0-9a-f]*)//; s/.*\[AMD\/ATI\] //' || echo "Unknown")
\e[35mMemory:        \e[0m $(free -h 2>/dev/null | awk '/Mem:/ {print $3 " / " $2}' || echo "Unknown")
\e[35mSwap:          \e[0m $(free -h 2>/dev/null | awk '/Swap:/ {print $3 " / " $2}' || echo "Disabled")
\e[35mDisk (/):      \e[0m $(df -h / 2>/dev/null | awk 'NR==2 {print $3 " / " $2 " (" $5 ")"}' || echo "Unknown")
\e[35mLocal IP:      \e[0m $(ip -4 addr show 2>/dev/null | awk '/inet/ {print $2; exit}' || echo "Unknown")
\e[35mBattery:       \e[0m $([ -d "/sys/class/power_supply/BAT0" ] && echo "$(cat /sys/class/power_supply/BAT0/capacity 2>/dev/null)% [$(cat /sys/class/power_supply/BAT0/status 2>/dev/null)]" || echo "No battery detected")
\e[35mLocale:        \e[0m ${LANG:-Unknown}
"
